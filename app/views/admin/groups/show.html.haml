%section
  %h3.title.has-text-centered
    %i.fas.fa-users
    Gestione
    = t 'activerecord.models.group.other'
    %i.fas.fa-tools
  .columns
    %aside.column.is-3
      %nav.panel
        %p.panel-heading= t 'site.ticket.search'
        = form_with scope: 'filter', url: list_admin_groups_path, method: :get, data: {action: "ajax:success->section#goPage"} do |f|
          .panel-block
            %p.control.has-icons-left
              = f.text_field :text, placeholder: 'Testo', class: 'input', data: {action: 'keyup->section#delayedSendForm'}
              %span.icon.is-left
                %i.fas.fa-search
    .column
      = render 'box'
      - if @group.users.present?
        %h5.title.is-size-5
          %i.fas.fa-fw.fa-users
          = t 'activerecord.models.user.other'
        = render @group.users
      %div
        %h5.title.is-size-5
          %i.fas.fa-fw.fa-calendar
          = t 'activerecord.models.fact.other'
        = render @group.facts
      %hr
      .has-text-centered= link_to fas_icon('chevron-left', text: 'Indietro'), admin_groups_path, class: 'button is-link', data: {action: "ajax:success->page#goPage", remote: true}



